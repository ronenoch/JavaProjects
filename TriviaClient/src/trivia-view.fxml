<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.RadioButton?>
<VBox alignment="CENTER" spacing="20.0"
      style="-fx-background-color: silver;"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="TriviaController"
      fx:id="v_box">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="textF" maxWidth="400.0">
    </TextField>
    <RadioButton fx:id="firstAnswer"/>
    <RadioButton fx:id="secondAnswer"/>
    <RadioButton fx:id="thirdAnswer"/>
    <RadioButton fx:id="forthAnswer"/>

    <Label fx:id="scoreLabel"/>
</VBox>